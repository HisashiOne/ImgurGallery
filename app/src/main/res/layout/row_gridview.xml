<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout android:layout_width="170dp"
        android:layout_height="170dp"
        android:background="@color/md_grey_400">
        <ImageView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/grid_Image"/>

        <TextView android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/colorPrimaryDark"
            android:text="@string/Title_Blank"
            android:textColor="@android:color/white"
            android:lines="1"
            android:id="@+id/grid_tittle"/>
        <TextView android:layout_width="match_parent"
            android:layout_height="35dp" android:layout_alignParentBottom="true"
            android:text="@string/Lorem"
            android:background="@color/alphaBlack"
            android:textColor="@android:color/white"
            android:id="@+id/grid_Descript"/>
    </RelativeLayout>
</LinearLayout>